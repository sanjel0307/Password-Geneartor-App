
WindowManager:
    Menu:
    passwordCreator:
    savingScreen: 
    passwordList: 
    

<Menu>
    name: "menu"

    GridLayout:
        cols: 1 
        size: root.width, root.height
        
        Button:
            text:"Create Password"
            on_release: 
                app.root.current = "creatingPassword"
                root.manager.get_screen('creatingPassword').ids.currentPassword.text = ""

        Button:
            text: "Password List"
            on_release:
                app.root.current = "list"
                root.manager.get_screen('list').ids.lister.update_data()
                


<passwordCreator>
    name: "creatingPassword"

    GridLayout:
        size: root.size
        rows: 3
        
        Label:
            id: currentPassword
            text: root.getPassword()

        Button:
            text: "Generate!"
            on_release:
                root.updatePassword()

        GridLayout: 
            cols: 3

            Button: 
                text: "Save"
                on_release:
                    app.root.current = "saving"
            

            Button: 
                text: "Back" 
                on_release: 
                    app.root.current = "menu"

<savingScreen> 
    name: "saving" 

    GridLayout:
        size:root.size
        rows: 2 

        GridLayout:
            size:root.size 
            cols: 2

            Label:
                text: root.current_password
            
            TextInput:
                id: passwordDescription
                text: "What application is password for..."
                on_touch_down: if self.collide_point(*args[1].pos): self.text = ""
                multiline: False
        
        Button:
            text: "SAVE"
            on_release:
                root.save()
                app.root.current = "menu"
                passwordDescription.text = "What application is password for..."

            
<passwordList> 
    name: "list" 
    GridLayout:
        rows: 2

        ExampleViewer:
            id: lister
            viewclass: "Button"
            orientation: "vertical"
            RecycleBoxLayout:
                default_size: None, 100 
                default_size_hint: 1, None 
                size_hint_y: None 
                height: self.minimum_height 
                orientation: "vertical"
        Button:

            text:"Back"
            on_release:
                app.root.current = "menu"
    
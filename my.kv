
WindowManager:
    MainWindow:
    SecondWindow:


<MainWindow>
    name: "menu"

    GridLayout:
        cols: 1 
        size: root.width, root.height
        
        Button:
            text:"Create Password"
            on_release: 
                app.root.current = "creatingPassword"

        Button:
            text: "Password List"


<SecondWindow>
    name: "creatingPassword"

    GridLayout:
        
   
        rows: 3

        Label:
            id: currentPassword
            text: "password"

        Button:
            text: "Generate!"
            on_release:
                root.updatePassword()

        Button: 
            text: "Back" 
            on_release: 
                app.root.current = "menu"
